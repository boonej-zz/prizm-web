extends ../layouts/layout_app

block head
  script(src='/javascripts/profile/profile_explore.js' type='text/javascript')
  script(src='/javascripts/profile/profile.js' type='text/javascript')
  link(rel='stylesheet' href='/stylesheets/profile/profile.css') 
  link(rel='stylesheet' href='/stylesheets/profile/profile_explore.css')

block content
  .container.topnav-offset
    #explore-header
      .explore-header.page-header
        | Explore 
    #explore-type(data-explore-type='latest')
    ul.nav.nav-tabs.nav-justified(role='tablist' id='explore-tab')
      li.cursor(  role='presentation' 
                  class='active'
                  onclick='explore.latestTab()'
                  data-toggle='tab')
        | Latest
      li.cursor(role='presentation'
        onclick='explore.popularTab()'
        data-toggle='tab')
        | Popular
      li.cursor(role='presentation'
        onclick='explore.featuredTab()'
        data-toggle='tab')
        | Featured
    #latest
      include ../posts/explore_feed
    #popular
    #featured
  div#postModal.modal.fade(
    tabIndex='-1'
    role='dialog'
    aria-labelledby='postModalLabel')
    .container.no-padding
      .modal-dialog
        .modal-content
          #post-display.modal-body
