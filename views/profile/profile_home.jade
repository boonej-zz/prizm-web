extends ../layouts/layout_app

block head
  script(src='/javascripts/profile/profile.js' type='text/javascript')
  script(src='/javascripts/profile/profile_home.js' type='text/javascript')
  link(rel='stylesheet', href='/stylesheets/profile/profile.css')
  link(rel='stylesheet', href='/stylesheets/profile/profile_home.css')

block content
  .container.topnav-offset
    ul#feed.row.infinite-feed
      each post in posts
        li.col-mob-12.col-xs-8.col-xs-offset-2.col-md-6.col-md-offset-3.background-column 
          .post(id='#{post.id}')
            .post-header
              if post.creator.profile_photo_url
                img.cursor(src='https://#{post.creator.profile_photo_url.substr(7)}'
                  class='prizm-avatar-xs'  
                  onclick='profile.showProfile("#{post.creator._id}")')
              else
                img.cursor(src='/images/profile/profile_default_avatar.png' 
                  class='prizm-avatar-sm' 
                  onclick='profile.showProfile("#{post.creator._id}")')
              h3.cursor(onclick='profile.showProfile("#{post.creator._id}")')
                | #{post.creator.name}
              .time-since
                .clock-icon
                p
                  | #{post.time_since}
              .category-icon(style="background-image: url('/images/icons/#{post.category}_icon.png')")
              if (post.external_provider)
                .post-via
                  | Post Via #{post.external_provider}
            .post-image(onclick='home.toggleComments(event)' prizm-data='#{post.id}')
              img.lazy(data-original='https://#{post.file_path.substr(7).replace(".jpg", "_2.jpg")}' prizm-data='#{post.id}')
            .post-footer
              if post.ownPost
                .like-icon.not-liked.cursor
              else
                if post.liked
                  .like-icon.liked.cursor(onclick='profile.unlikePost("#{post._id}", event)')
                else
                  .like-icon.not-liked.cursor(onclick='profile.likePost("#{post._id}", event)')
              p.icon-text.likes-count
                | #{post.likes_count}
              .comment-icon(type='button'
                            class='cursor'
                            prizm-data='#{post.id}'
                            onclick='home.toggleComments(event)')
              p.icon-text
                | #{post.comments_count}
              .repost-icon
              .action-icon
              .location-icon
            .comment-drawer(prizm-data='#{post.id}')
              .post-comments
                p.comments-title
                  | Comments
              if post.text
                .comment-container
                  .post-comments-avatar
                    if post.creator.profile_photo_url
                      img(src='https://#{post.creator.profile_photo_url.substr(7)}'
                          class='prizm-avatar-xs'
                          onclick='profile.showProfile("#{post.creator._id}")')
                    else
                      img(src='/images/profile/profile_default_avatar.png'
                          class='prizm-avatar-xs'
                          onclick='profile.showProfile("#{post.creator._id}")')
                  .avatar-name.cursor(onclick='profile.showProfile("#{post.creator._id}")')
                    | #{post.creator.name}
                  .comment-text
                    | !{post.formattedText}
                  .comment-info
              each comment, i in post.comments
                .comment-container
                  .post-comments-avatar
                    if post.comments[i].creator.profile_photo_url
                      img(src='https://#{post.comments[i].creator.profile_photo_url.substr(7)}'
                          class='prizm-avatar-xs'
                          onclick='profile.showProfile("#{post.comments[i].creator._id}")')
                    else
                      img(src='/images/profile/profile_default_avatar.png' 
                          class='prizm-avatar-sm'
                          onclick='profile.showProfile("#{post.comments[i].creator._id}")')
                  .avatar-name.cursor(onclick='profile.showProfile("#{post.comments[i].creator._id}")')
                    | #{post.comments[i].creator.name}
                  .comment-text
                    | !{post.comments[i].formattedText}
                  .comment-info
                    #clock-image
                    #time
                      | #{post.comments[i].time_since} ago
                    .comment-likes
                      | -&nbsp;&nbsp;Like
                    .like-icon
                    .comment-likes-count
                      | #{post.comments[i].likes_count}
              .comments-post
                form(action='/posts/#{post.id}' method='get' class='comment-post')
                  label(for='inputComment' class='sr-only')
                  input(type='text'
                        id='inputComment'
                        name='comment'
                        class='form-control'
                        placeholder='Write a comment...'
                        required)
                  button(class='btn btn-xs btn-default post-button' type='submit')
                    | Post
