extends ../layouts/layout_app

block head
  //- script(type='text/javascript' src='/javascripts/jquery.imgareaselect.min.js')
  //- script(type='text/javascript' src='/javascripts/upload.js')
  //- script(type='text/javascript').
  //-   Upload.fileAreaId = 'insight-image-upload';
  //-   Upload.infoAreaId = 'preview';
  //- link(rel='stylesheet' type='text/css' href='/stylesheets/imgareaselect-default.css')
  script(src='/javascripts/registration/registration.js' type='text/javascript')
  link(rel='stylesheet', href='/stylesheets/registration/registration.css')

block content
  .container.topnav-offset.light-grey
    .row
      .col-mob-12.col-xs-8.col-xs-offset-2.col-md-6.col-md-offset-3.registration
        .message
        .registration-card(data-user-id='' 
                           data-number-of-sections='5'
                           data-current-section='0')
          .section.section-animate
            h2 Join Prizm Today!
            | Are you a...
            | <br>
            ul.nav.nav-pills.nav-justified(role='tablist')
              li(role='presentation' class='active')
                a(href='#'
                  data-toggle='tab'
                  onClick='reg.individualForm()')
                  | Individual
              li(role='presentation' class='')
                a(href='#'
                  data-toggle='tab'
                  onClick='reg.partnerForm()')
                  | Partner
            #individual-form
              include registration_form_individual
            #partner-form
              include registration_form_partner            
          .section.section-animate
            h2 Welcome to Prizm
            img(src='/images/profile/profile_header.png'
                style='width: 100%; height: 300px; margin-top: 30px; margin-bottom: 30px;')
            button(class='btn btn-lg btn-primary btn-block'
                  onClick='reg.nextSection()')
              | Next
          .section.section-animate
            include registration_interests
          .section.section-animate
            include registration_follow
          .section.section-animate
            include registration_photo
          .section.section-animate
            h2 Congratulations!
            | You are read to start sharing your Prizm
            a(class='btn btn-lg btn-primary btn-block'
              href='/login')
              | Get Started!