extends ../layouts/layout_app

block head
  script(src='/javascripts/registration/registration.js' type='text/javascript')
  link(rel='stylesheet', href='/stylesheets/registration/registration.css')

block content
  .container.topnav-offset.light-grey
    .row
      .col-mob-12.col-xs-8.col-xs-offset-2.col-md-6.col-md-offset-3.white
        .registration-card
          .section
            if error
              | #{error}
              | <br>
            else
              h2 Join Prizm Today!
            | Are you a...
            | <br>
            ul.nav.nav-pills.nav-justified(role='tablist')
              li(role='presentation' class='active')
                a(href='#'
                  data-toggle='tab'
                  onClick='reg.individualForm()')
                  | Individual
              li(role='presentation' class='')
                a(href='#'
                  data-toggle='tab'
                  onClick='reg.partnerForm()')
                  | Partner
            #individual-form
              include registration_form_individual
            #partner-form
              include registration_form_partner            
          .section.red
          .section.green
          .section.yellow