extends ../layouts/register_layout

block menu 
  a(href='/#new-home')
          img(id='logo'
              src='/images/prizmlogo.svg')
  .menu
    p.already Already have an account?
    a.blue.login(href='/login') LOG IN


block form
  #who.panel
    h2 Tell us about yourself
    .buttons
      button.individual
        | I am an individual
      button.organization
        | I am an organization
    button.next.blue(disabled=true onclick='prizm.typeNext()') Next
    script(type='text/javascript').
      $(document).ready(function(){
        $('.buttons button').click(function(){
          $('.buttons button').attr('selected', false);
          $(this).attr('selected', true);
          $('button.next').attr('disabled', false);
        });
      });
