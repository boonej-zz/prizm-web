doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/responsive.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme-prizm.css')
    link(rel='stylesheet', href='/stylesheets/login/login.css')
    link(rel='stylesheet', href='/stylesheets/profile/profile.css')
    script(src='/javascripts/jquery-1.11.1.min.js' type='text/javascript')
    script(src='/javascripts/jquery-ui-1.11.1.min.js' type='text/javascript')
    script(src='/javascripts/prizm.js' type='text/javascript')
    script(src='/javascripts/bootstrap.min.js' type='text/javascript')
    meta(name='viewport' 
         content='width=device-width,height=device-height,initial-scale=1.0,maximum-scale=1.0')
    meta(name='apple-itunes-app'
         content='app-id=903458597, app-argument=prizmapp://open')
    block head
    
  body(id='#{bodyId}')
    block navbar
      #navbar.full-width
        .nav-top.wrap
          h1#alt-logo(onclick='prizm.goHome()')
            span.hidden Prizm
          block profileMenu
            #profile-navbar
              if (auth)
                #avatar-navbar
                  img(src='https://#{currentUser.profile_photo_url.substr(7)}')
                  #profile-menu.hidden
                    ul
                      li
                        a(href="#") Edit Profile
                      li
                        a(href="/logout") Log Out
                #navbar-name
                  p
                    | #{currentUser.name}
              else
                #navbar-login
                  a(type='button'
                    data-toggle='modal'
                    data-target='#loginModal')
                    | Login
      //  Begin Login Modal
      div(class='modal fade'
          id='loginModal'
          tabIndex='-1'
          role='dialog'
          aria-labelledby='loginModalLabel')
        .modal-dialog
          .modal-content
            .modal-body
              include ../login/login_form
      // End Login Modal
    block content

