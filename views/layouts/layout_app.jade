doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme-prizm.css')
    link(rel='stylesheet', href='/stylesheets/global.css')
    link(rel='stylesheet', href='/stylesheets/layout/layout_app.css')
    link(rel='stylesheet', href='/stylesheets/login/login.css')
    script(src='/javascripts/jquery-1.11.1.min.js' type='text/javascript')
    script(src='/javascripts/jquery-ui-1.11.1.min.js' type='text/javascript')
    script(src='/javascripts/prizm.js' type='text/javascript')
    script(src='/javascripts/bootstrap.min.js' type='text/javascript')
    script(src='/javascripts/layout/layout_app.js' type='text/javascript')
    meta(name='viewport' 
         content='width=device-width,height=device-height,initial-scale=1.0,maximum-scale=1.0')
    meta(name='apple-itunes-app'
         content='app-id=903458597, app-argument=prizmapp://open')
    block head
    
  body(id='#{bodyId}')
    block navbar
      .navbar.navbar-default.navbar-fixed-top
        .container
          .row
            .navbar-header.col-mob-12
              .navbar-title.cursor(onclick='nav.goToHomeFeed()')
                | Prizm
              if (auth)
                .menu-icon(onclick='nav.toggleSettings()')
                .plus-icon
                .avatar-menu
                    img(src='https://#{currentUser.profile_photo_url.substr(7)}'
                        class='prizm-avatar-xs'
                        onclick='nav.toggleMenu()')
                    .tool-tip(onclick='nav.toggleMenu()')
                    .user-menu
                      ul
                        li
                          a(href='/profile') View Profile
                        li
                          a(href='#') Edit Profile
                        li
                          a(href='#') Settings
                        li
                          a(href='/logout') Log Out
              else
                .avatar-menu
                    .login-button.cursor
                      a(type='button'
                        data-toggle='modal'
                        data-target='#loginModal')
                        | Login
      //  Begin Login Modal
      div(class='modal fade'
          id='loginModal'
          tabIndex='-1'
          role='dialog'
          aria-labelledby='loginModalLabel')
        .modal-dialog
          .modal-content
            .modal-body
              include ../login/login_form
      // End Login Modal
    block content

    block settings
      if (auth)
        .settings
          .settings-menu-button(onclick='nav.toggleSettings()')
          .settings-menu
            ul
              li.home-button.settings-icon
                a(href='/profile')
                  | Home
              li.activity-button.settings-icon
                a(href='#')
                  | Activity
              li.insights-button.settings-icon
                a(href='#')
                  | Insights
              li.surveys-button.settings-icon
                a(href='#')
                  | Surveys
            if (currentUser.type == 'institution_verified')
              ul Admin
                li.stats-button.settings-icon
                  a(href='#')
                    | Stats
                li.settings-button.settings-icon
                  a(href='#')
                    | Settings
                li.members-button.settings-icon
                  a(href='/profile/members')
                    | Members
                li.billing-button.settings-icon
                  a(href='#')
                    | Billing
                li.invite-button.settings-icon
                  a(href='#')
                    | Invite
