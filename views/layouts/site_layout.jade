          if (selected == 'insight')
            span(class='menu-button selected')
              a(href='/#insight') Insight
          else
            span.menu-button
              a(href='/#insight') Insight
          if (selected == 'mission')
            span(class='menu-button selected')
              a(href='/#mission') Mission
          else
            span.menu-button
              a(href='/#mission') Mission
          span(class='menu-button')
            a(href='http://beprizmatic.com') Blog
          span(class='menu-button')
            a(href='/login') Login
          //- span(class='menu-button')
          //-   a(href='mailto:press@prizmapp.com')
