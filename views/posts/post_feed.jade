each post in posts
  .post(id='#{post.id}')
    .post-image
      img(src='https://#{post.file_path.substr(7)}')
    .post-footer
      .like-icon
      p.likes
        | #{post.likes_count}
      .comment-icon(type='button' data-toggle='modal' data-target='#postModal')
      p.comments
        | #{post.comments_count}
      .action-icon
      .time
        #clock-image
        #time #{post.time_since}