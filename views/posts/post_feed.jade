each post in posts
  .col-md-4.col-sm-6.col-xs-12
    .post(id='#{post.id}')
      .post-image(onclick='prizm.showModal(event)')
        img(src='https://#{post.file_path.substr(7)}')
      .post-footer
        .like-icon
        p.likes
          | #{post.likes_count}
        .comment-icon(type='button' onclick='prizm.showModal(event)')
        p.comments
          | #{post.comments_count}
        .action-icon
        .time
          #clock-image
          #time #{post.time_since}
