each message in messages
  - var creatorPhoto = message.creator.profile_photo_url?'https://' + message.creator.profile_photo_url.substr(7):'/images/default-profile.png'
  li.message(created='#{message.create_date}')
    .profile-icon.cursor(style="background-image: url('#{creatorPhoto}')"
      onclick='nav.navigate("/profiles/#{message.creator._id}")') 
    .content
      .time
        span.clock-icon
        span.time-since #{message.timeSince} ago
      span.creator.cursor(onclick='nav.navigate("/profiles/#{message.creator._id}")') 
        | #{message.creator.name}
      span.message
        | #{message.text} 
